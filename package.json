{
  "name": "@puredit/project",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "eslint --ignore-path .gitignore . && turbo run lint",
    "format": "prettier --write --ignore-path .gitignore --plugin-search-dir=. \"**/*.{ts,tsx,mts,js,jsx,cjs,mjs,json,svelte,html,css,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.2",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "eslint-plugin-testing-library": "^5.0.6",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.6.0",
    "sass": "^1.53.0",
    "svelte": "^3.46.4",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.7",
    "ts-jest": "^27.1.3",
    "turbo": "latest",
    "typescript": "^4.5.5"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.4.1",
  "lint-staged": {
    "*.{ts,tsx,mts,js,jsx,cjs,mjs,svelte}": [
      "prettier --write --plugin-search-dir=.",
      "eslint --cache --fix"
    ],
    "*.{json,html,css,md}": [
      "prettier --write --plugin-search-dir=."
    ]
  }
}
